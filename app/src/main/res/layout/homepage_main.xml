<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorbackground"
            app:popupTheme="@style/Theme.AppCompat">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="?attr/actionBarSize"
             android:gravity="center"
             android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KEYAAN"
                android:layout_marginRight="@dimen/dimen_15"
                android:textColor="#575252"
                android:textSize="@dimen/dimen_18"
                android:textStyle="bold" />

         </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="@dimen/dimen_12"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dimen_15">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_110"
                    android:gravity="center">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/dimen_75"
                        android:layout_height="@dimen/dimen_75"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:src="@drawable/profile"
                        app:civ_border_color="#80000000"
                        app:civ_shadow_color="#00C2B9B9" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Good Morning, CeYo !"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_16"
                    android:textStyle="bold" />




            </LinearLayout>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/color_white"
                card_view:cardCornerRadius="@dimen/dimen_12"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/next_page"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="@dimen/dimen_35"
                                android:layout_height="@dimen/dimen_35"
                                android:background="@drawable/calender1"
                                android:backgroundTint="@color/colorbackground" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 Review"
                                android:layout_marginTop="@dimen/dimen_12"
                                android:textColor="#80000000"
                                android:textSize="@dimen/dimen_14"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/next_page1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="@dimen/dimen_35"
                                android:layout_height="@dimen/dimen_35"
                                android:background="@drawable/calender1"
                                android:backgroundTint="@color/colorbackground" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Call"
                                android:textColor="#80000000"

                                android:layout_marginTop="@dimen/dimen_12"                                android:textSize="@dimen/dimen_14"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/next_page2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="@dimen/dimen_35"
                                android:layout_height="@dimen/dimen_35"
                                android:backgroundTint="@color/colorbackground"
                                android:background="@drawable/calender1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dimen_10"
                                android:text="Share"

                                android:layout_marginTop="@dimen/dimen_12"                                android:textColor="#80000000"
                                android:textSize="@dimen/dimen_14"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_18"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/next_page3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="@dimen/dimen_35"
                                android:layout_height="@dimen/dimen_35"
                                android:background="@drawable/calender1"
                                android:backgroundTint="@color/colorbackground"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="@dimen/dimen_12"                                android:text="1 Review"
                                android:textColor="#80000000"
                                android:textSize="@dimen/dimen_14"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/next_page4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="@dimen/dimen_35"
                                android:layout_height="@dimen/dimen_35"
                                android:background="@drawable/calender1"
                                android:backgroundTint="@color/colorbackground" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Call"
                                android:textColor="#80000000"
                                android:textSize="@dimen/dimen_14"

                                android:layout_marginTop="@dimen/dimen_12"                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/next_page5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="@dimen/dimen_35"
                                android:layout_height="@dimen/dimen_35"
                                android:backgroundTint="@color/colorbackground"
                                android:background="@drawable/cloud" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dimen_10"

                                android:layout_marginTop="@dimen/dimen_12"                                android:text="Share"
                                android:textColor="#80000000"
                                android:textSize="@dimen/dimen_14"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>


